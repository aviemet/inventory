<p id="notice"><%= notice %></p>

<h1>Phone Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @phone_types.each do |phone_type| %>
      <tr>
        <td><%= phone_type.name %></td>
        <td><%= link_to 'Show', phone_type %></td>
        <td><%= link_to 'Edit', edit_phone_type_path(phone_type) %></td>
        <td><%= link_to 'Destroy', phone_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Phone Type', new_phone_type_path %>
