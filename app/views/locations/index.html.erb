<p id="notice"><%= notice %></p>

<h1>Locations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.name %></td>
        <td><%= link_to 'Show', company_location_path(@company_id, location) %></td>
        <td><%= link_to 'Edit', edit_company_location_path(@company_id, location) %></td>
        <td><%= link_to 'Destroy', company_location_path(@company_id, location), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Location', new_company_location_path(@company_id) %>
