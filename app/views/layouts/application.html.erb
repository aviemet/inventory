<!DOCTYPE html>
<html>
  <head>
    <title>Inventory</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render "layouts/application/alerts" %>

    <div class="grid gap-0 side-bar-closed" id="grid-layout">
      <aside id="sidebar" class="bg-gray-900">
        <%= mi.public_send(:menu).html(id: "sidebar-menu-toggle") %>
        <%= render "layouts/application/nav_links" %>
        <%= render "layouts/application/bottom_links" %>
      </aside>
      <header id="topbar">Top Bar</header>
      <main id="content" class="flex">
        <div class="flex-1">
          <%= yield %>
        </div>
      </main>
      <footer id="footer">Footer</footer>
    </div>
    <!--<div id="wrapper" class="flex">
      <%= render "layouts/application/alerts" %>

      <%= render "layouts/application/sidebar" %>

      <main id="content" class="flex-1">
        <div class="container mx-auto">
          <%= yield %>
        </div>
      </main>

    </div>-->

    <%= javascript_pack_tag 'menu' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </body>
</html>
