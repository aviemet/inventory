doctype html
html
  head
    meta content=("text/html; charset=UTF-8") http-equiv="Content-Type" /
    title Inventory
    = csrf_meta_tags
    = csp_meta_tag
    = action_cable_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'

  body data-controller="layout" data-target="layout.body" class=class_names(dark: @current_user&.dark_mode)
    = render "layouts/application/flash"

    #grid-layout.side-bar-closed data-target="layout.sidebar"
      = render "layouts/application/sidebar"

      = render "layouts/application/topbar"

      main#content-wrapper
        = yield

      = render "layouts/application/footer"

    = render "layouts/application/modal"
