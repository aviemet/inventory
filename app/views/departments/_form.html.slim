= form_with(model: [@company, department], local: true) do |form|
  - if department.errors.any?
    #error_explanation
      h2
        = pluralize(department.errors.count, "error")
        | prohibited this department from being saved:
      ul
        - department.errors.full_messages.each do |message|
          li =
 message
  .field
    = form.label :name
    = form.text_field :name
  .field
    = form.label :location_id
    .select
      - company = @company || department.company
      = form.select :location_id, options_for_select(company.locations.collect{ |l| [l.name, l.id] }, department.location_id), prompt: "-- Location --"
  .actions
    = form.submit
