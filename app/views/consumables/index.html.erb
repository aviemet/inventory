<p id="notice"><%= notice %></p>

<h1>Consumables</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Model number</th>
      <th>Min qty</th>
      <th>Qty</th>
      <th>Cost</th>
      <th>Requestable</th>
      <th>Notes</th>
      <th>Manufacturer</th>
      <th>Consumable category</th>
      <th>Vendor</th>
      <th>Default location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @consumables.each do |consumable| %>
      <tr>
        <td><%= consumable.name %></td>
        <td><%= consumable.model_number %></td>
        <td><%= consumable.min_qty %></td>
        <td><%= consumable.qty %></td>
        <td><%= consumable.cost %></td>
        <td><%= consumable.requestable %></td>
        <td><%= consumable.notes %></td>
        <td><%= consumable.manufacturer_id %></td>
        <td><%= consumable.consumable_category_id %></td>
        <td><%= consumable.vendor_id %></td>
        <td><%= consumable.default_location_id %></td>
        <td><%= link_to 'Show', consumable %></td>
        <td><%= link_to 'Edit', edit_consumable_path(consumable) %></td>
        <td><%= link_to 'Destroy', consumable, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

