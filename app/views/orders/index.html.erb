

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>User</th>
      <th>Ordered on</th>
      <th>Delivered on</th>
      <th>Canceled on</th>
      <th>Returned on</th>
      <th>Shipping</th>
      <th>Vendor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.number %></td>
        <td><%= order.user_id %></td>
        <td><%= order.ordered_on %></td>
        <td><%= order.delivered_on %></td>
        <td><%= order.canceled_on %></td>
        <td><%= order.returned_on %></td>
        <td><%= order.shipping %></td>
        <td><%= order.vendor_id %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

