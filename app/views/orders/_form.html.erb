<%= simple_form_for order do |form| %>
  <%= form.error_notification message: form.object.errors[:base].to_sentence %>
  <%= form.input :user_id, as: :hidden %>
  <%= form.input :vendor_id, as: :select, prompt: "-- Vendor --" %>
  <%= render "shared/datepicker", form: form, name: :ordered_on %>
  <%= form.input :number, label: "Order Number" %>
  <%= form.input :shipping %>
  <%= form.submit %>

<% end %>
