<p id="notice"><%= notice %></p>

<h1>Accessories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Serial</th>
      <th>Notes</th>
      <th>Qty</th>
      <th>Vendor</th>
      <th>Default location</th>
      <th>Accessory category</th>
      <th>Model number</th>
      <th>Cost</th>
      <th>Min qty</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @accessories.each do |accessory| %>
      <tr>
        <td><%= link_to accessory.name, accessory %></td>
        <td><%= accessory.serial %></td>
        <td><%= accessory.notes %></td>
        <td><%= accessory.qty %></td>
        <td><%= accessory.vendor_id %></td>
        <td><%= accessory.default_location_id %></td>
        <td><%= accessory.accessory_category_id %></td>
        <td><%= accessory.model_number %></td>
        <td><%= accessory.cost %></td>
        <td><%= accessory.min_qty %></td>
        <td>
          <%= render "shared/buttons/edit", path: edit_accessory_path(accessory) %>
          <%= render "shared/buttons/delete", accessory %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Accessory', new_accessory_path %>
