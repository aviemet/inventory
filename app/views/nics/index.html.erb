<p id="notice"><%= notice %></p>

<h1>Nics</h1>

<table>
  <thead>
    <tr>
      <th>Mac</th>
      <th>Item</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nics.each do |nic| %>
      <tr>
        <td><%= nic.mac %></td>
        <td><%= nic.item_id %></td>
        <td><%= link_to 'Show', nic %></td>
        <td><%= link_to 'Edit', edit_nic_path(nic) %></td>
        <td><%= link_to 'Destroy', nic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

