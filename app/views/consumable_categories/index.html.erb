<p id="notice"><%= notice %></p>

<h1>Consumable Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @consumable_categories.each do |consumable_category| %>
      <tr>
        <td><%= consumable_category.name %></td>
        <td><%= consumable_category.notes %></td>
        <td><%= link_to 'Show', consumable_category %></td>
        <td><%= link_to 'Edit', edit_consumable_category_path(consumable_category) %></td>
        <td><%= link_to 'Destroy', consumable_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

