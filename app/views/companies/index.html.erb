<h1>Companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Locations</th>
      <th>Departments</th>
      <th>Assets</th>
      <th>People</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= link_to company.name, company %></td>
        <td><%= company.locations.count %></td>
        <td><%= company.departments.count %></td>
        <td><%= company.items.count %></td>
        <td><%= company.people.count %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Company', new_company_path %>
