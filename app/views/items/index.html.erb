

<h1>Items</h1>

<div> 
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Model</th>
        <th>Serial</th>
        <th>Description</th>
        <th>Notes</th>
        <th>Item category</th>
        <th>Brand</th>
        <th colspan="2">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= link_to item.title, item %></td>
          <td><%= item.model %></td>
          <td><%= item.serial %></td>
          <td><%= item.description %></td>
          <td><%= item.notes %></td>
          <td><%= item.item_category_id %></td>
          <td><%= item.brand_id %></td>
          <td><%= link_to 'Edit', edit_item_path(item) %></td>
          <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Item', new_item_path %>