<div class="container">
	<h1>Checkout Asset</h1>

	<%= form_with(model: @asset, local: true) do |form| %>
		<% if @asset.errors.any? %>
			<div id="error_explanation">
				<h2><%= pluralize(@asset.errors.count, "error") %> prohibited this item from being saved:</h2>

				<ul>
					<% @asset.errors.full_messages.each do |message| %>
						<li><%= message %></li>
					<% end %>
				</ul>
			</div>
		<% end %>

		<div class="field">
			<label>Model:</label>
			<div><%= @asset.model.name %></div>
		</div>

		<div class="field">
			<%= form.label "Asset Name" %>
			<%= form.text_field :title %>
		</div>

	<% end %>

</div>