= form_with(model: purchase, local: true) do |form|
  - if purchase.errors.any?
    #error_explanation
      h2
        = pluralize(purchase.errors.count, "error")
        | prohibited this purchase from being saved:
      ul
        - purchase.errors.full_messages.each do |message|
          li =
 message
  .field
    = form.label :item_id
    = form.text_field :item_id
  .field
    = form.label :price
    = form.text_field :price
  .field
    = form.label :shipping
    = form.text_field :shipping
  .field
    = form.label :tax
    = form.text_field :tax
  .field
    = form.label :qty
    = form.number_field :qty
  .field
    = form.label :notes
    = form.text_area :notes
  .actions
    = form.submit
